<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/bg_wood</item>
    </style>

    <style name="MenuButton" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:src">@drawable/ic_menu</item>
        <item name="android:background">@drawable/ripple_effect_white</item>
    </style>

    <style name="PointsTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLength">4</item>
        <item name="android:textColor">@color/gray_text</item>
        <item name="android:fontFamily">@font/rock_on</item>
    </style>

    <style name="PointsTextView1Player" parent="PointsTextView">
        <item name="android:textSize">100sp</item>
        <item name="android:paddingBottom">48dp</item>
    </style>

    <style name="PointsTextView2Player" parent="PointsTextView">
        <item name="android:textSize">100sp</item>
    </style>

    <style name="PointsTextView3Player" parent="PointsTextView">
        <item name="android:textSize">64sp</item>
    </style>

    <style name="PointsTextView4Player" parent="PointsTextView">
        <item name="android:textSize">48sp</item>
    </style>

    <style name="PointsTextView5Player" parent="PointsTextView">
        <item name="android:textSize">48sp</item>
    </style>

    <style name="PointsTextView6Player" parent="PointsTextView">
        <item name="android:textSize">48sp</item>
    </style>

    <style name="PointsTextView7Player" parent="PointsTextView">
        <item name="android:textSize">48sp</item>
    </style>

    <style name="PointsTextView8Player" parent="PointsTextView">
        <item name="android:textSize">48sp</item>
    </style>

</resources>
