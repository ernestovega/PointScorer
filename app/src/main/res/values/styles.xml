<resources>

    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/bg_wood</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="MyProgressBar" parent="Theme.AppCompat">
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="MyTextInputLayout" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MenuButton" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:src">@drawable/ic_menu</item>
        <item name="background">@drawable/ripple_effect_white</item>
    </style>

    <style name="PointsTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:gravity">center</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/rock_on</item>
    </style>

    <style name="PointsTextView1Player" parent="PointsTextView">
        <item name="android:textSize">100sp</item>
        <item name="android:paddingBottom">48dp</item>
    </style>

    <style name="PointsTextView2Player" parent="PointsTextView">
        <item name="android:textSize">80sp</item>
    </style>

    <style name="PointsTextView3Player" parent="PointsTextView">
        <item name="android:textSize">64sp</item>
    </style>

    <style name="PointsTextView4Player" parent="PointsTextView">
        <item name="android:textSize">48sp</item>
    </style>

    <style name="PointsTextView5Player" parent="PointsTextView">
        <item name="android:textSize">48sp</item>
    </style>

    <style name="PointsTextView6Player" parent="PointsTextView">
        <item name="android:textSize">48sp</item>
    </style>

    <style name="PointsTextView7Player" parent="PointsTextView">
        <item name="android:textSize">48sp</item>
    </style>

    <style name="PointsTextView8Player" parent="PointsTextView">
        <item name="android:textSize">48sp</item>
    </style>

    <style name="NameEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:lines">1</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:hint">@string/player_name</item>
        <item name="android:maxLength">20</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="fontFamily">@font/rock_on</item>
    </style>

    <style name="NameTextView1Player" parent="NameEditText">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="NameEditText2Player" parent="NameEditText">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="NameEditText2PlayerLand" parent="NameEditText">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="NameEditText3Player" parent="NameEditText">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="NameEditText4Player" parent="NameEditText">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="NameEditText4PlayerLand" parent="NameEditText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="NameEditText5Player" parent="NameEditText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="NameEditText6Player" parent="NameEditText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="NameEditText7Player" parent="NameEditText">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="NameEditText8Player" parent="NameEditText">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MainMenuButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">16dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:tint">@color/black</item>
        <item name="android:background">@drawable/ripple_effect_white_wood_bg</item>
    </style>

    <style name="MainMenuButtonProgress" parent="Widget.AppCompat.ProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:theme">@style/MyProgressBar</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="SettingsMenuColorButton">
        <item name="android:layout_width">@dimen/colorButtonSize</item>
        <item name="android:layout_height">@dimen/colorButtonSize</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="SettingsMenuColorsRowContainer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="SettingsMenuButton" parent="android:Widget.Material.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/ripple</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingStart">16dp</item>
    </style>

    <style name="BannerAdContainer">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:visibility">gone</item>
    </style>

</resources>
