<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_dialog_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/btClose"
        style="?borderlessButtonStyle"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="end"
        android:contentDescription="@string/close"
        android:padding="8dp"
        android:src="@android:drawable/ic_menu_close_clear_cancel" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:ellipsize="end"
                android:fontFamily="@font/rock_on"
                android:gravity="center_horizontal"
                android:hint="@string/player_name"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:lines="1"
                android:maxLength="20"
                android:selectAllOnFocus="true"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorPrimary"
                android:textSize="16sp"
                app:backgroundTint="@color/colorAccent"
                tools:text="@string/player_name" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp"
                android:orientation="horizontal">

                <View
                    android:id="@+id/vColorRed"
                    android:layout_width="@dimen/colorButtonSize"
                    android:layout_height="@dimen/colorButtonSize"
                    android:background="@drawable/shape_button_red" />

                <View
                    android:id="@+id/vColorGreen"
                    android:layout_width="@dimen/colorButtonSize"
                    android:layout_height="@dimen/colorButtonSize"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:background="@drawable/shape_button_green" />

                <View
                    android:id="@+id/vColorOrange"
                    android:layout_width="@dimen/colorButtonSize"
                    android:layout_height="@dimen/colorButtonSize"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:background="@drawable/shape_button_orange" />

                <View
                    android:id="@+id/vColorPurple"
                    android:layout_width="@dimen/colorButtonSize"
                    android:layout_height="@dimen/colorButtonSize"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:background="@drawable/shape_button_purple" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp"
                android:orientation="horizontal">

                <View
                    android:id="@+id/vColorYellow"
                    android:layout_width="@dimen/colorButtonSize"
                    android:layout_height="@dimen/colorButtonSize"
                    android:background="@drawable/shape_button_yellow" />

                <View
                    android:id="@+id/vColorPink"
                    android:layout_width="@dimen/colorButtonSize"
                    android:layout_height="@dimen/colorButtonSize"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:background="@drawable/shape_button_pink" />

                <View
                    android:id="@+id/vColorBlue"
                    android:layout_width="@dimen/colorButtonSize"
                    android:layout_height="@dimen/colorButtonSize"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:background="@drawable/shape_button_blue" />

                <View
                    android:id="@+id/vColorWhite"
                    android:layout_width="@dimen/colorButtonSize"
                    android:layout_height="@dimen/colorButtonSize"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:background="@drawable/shape_button_white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btResetPoints"
                    style="?borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/reset_points"
                    android:textColor="@color/colorAccent" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>