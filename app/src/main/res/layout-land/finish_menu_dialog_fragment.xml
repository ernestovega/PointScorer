<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/white"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/flFinishMenuMediumRectangleAdContainer"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_gravity="center_vertical"
        android:gravity="center" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="28dp">

        <TextView
            android:id="@+id/tvFinishMenuTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:text="@string/bye"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvFinishMenuMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/llFinishMenuButtonsContainer"
            android:layout_below="@+id/tvFinishMenuTitle"
            android:layout_marginBottom="24dp"
            android:gravity="center_vertical"
            android:lineSpacingMultiplier="1.3"
            android:text="@string/thanks_for_using_my_app_see_you_soon"
            android:textColor="@color/black" />

        <LinearLayout
            android:id="@+id/llFinishMenuButtonsContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="end"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btFinishMenuCancel"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:textColor="@color/colorAccent" />

            <Button
                android:id="@+id/btFinishMenuExit"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/exit"
                android:textColor="@color/colorAccent" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>