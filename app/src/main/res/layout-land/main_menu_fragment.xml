<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".app.main.fragments.main_menu.MainMenuFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            tools:ignore="NestedWeights">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                tools:ignore="NestedWeights">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btMainMenu1Player"
                    style="@style/MainMenuButton"
                    android:contentDescription="@string/one_player"
                    app:srcCompat="@drawable/ic_one_player" />

                <androidx.core.widget.ContentLoadingProgressBar
                    android:id="@+id/pbMainMenu1Player"
                    style="@style/MainMenuButtonProgress"
                    tools:visibility="visible" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                tools:ignore="NestedWeights">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btMainMenu5Player"
                    style="@style/MainMenuButton"
                    android:contentDescription="@string/five_players"
                    app:srcCompat="@drawable/ic_five_players" />

                <androidx.core.widget.ContentLoadingProgressBar
                    android:id="@+id/pbMainMenu5Player"
                    style="@style/MainMenuButtonProgress"
                    tools:visibility="visible" />

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                tools:ignore="NestedWeights">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btMainMenu2Player"
                    style="@style/MainMenuButton"
                    android:contentDescription="@string/two_players"
                    app:srcCompat="@drawable/ic_two_players" />

                <androidx.core.widget.ContentLoadingProgressBar
                    android:id="@+id/pbMainMenu2Player"
                    style="@style/MainMenuButtonProgress"
                    tools:visibility="visible" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                tools:ignore="NestedWeights">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btMainMenu6Player"
                    style="@style/MainMenuButton"
                    android:contentDescription="@string/six_players"
                    app:srcCompat="@drawable/ic_six_players" />

                <androidx.core.widget.ContentLoadingProgressBar
                    android:id="@+id/pbMainMenu6Player"
                    style="@style/MainMenuButtonProgress"
                    tools:visibility="visible" />

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                tools:ignore="NestedWeights">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btMainMenu3Player"
                    style="@style/MainMenuButton"
                    android:contentDescription="@string/three_players"
                    app:srcCompat="@drawable/ic_three_players" />

                <androidx.core.widget.ContentLoadingProgressBar
                    android:id="@+id/pbMainMenu3Player"
                    style="@style/MainMenuButtonProgress"
                    tools:visibility="visible" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                tools:ignore="NestedWeights">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btMainMenu7Player"
                    style="@style/MainMenuButton"
                    android:contentDescription="@string/seven_players"
                    app:srcCompat="@drawable/ic_seven_players" />

                <androidx.core.widget.ContentLoadingProgressBar
                    android:id="@+id/pbMainMenu7Player"
                    style="@style/MainMenuButtonProgress"
                    tools:visibility="visible" />

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                tools:ignore="NestedWeights">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btMainMenu4Player"
                    style="@style/MainMenuButton"
                    android:contentDescription="@string/four_players"
                    app:srcCompat="@drawable/ic_four_players" />

                <androidx.core.widget.ContentLoadingProgressBar
                    android:id="@+id/pbMainMenu4Player"
                    style="@style/MainMenuButtonProgress"
                    tools:visibility="visible" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                tools:ignore="NestedWeights">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btMainMenu8Player"
                    style="@style/MainMenuButton"
                    android:contentDescription="@string/eight_players"
                    app:srcCompat="@drawable/ic_eight_players" />

                <androidx.core.widget.ContentLoadingProgressBar
                    android:id="@+id/pbMainMenu8Player"
                    style="@style/MainMenuButtonProgress"
                    tools:visibility="visible" />

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom|center_horizontal"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_margin="24dp"
                android:layout_weight="1"
                android:background="@color/green">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/acbMainMenuWatchAd"
                    android:layout_width="96dp"
                    android:layout_height="match_parent"
                    android:background="@color/green"
                    android:lineSpacingMultiplier="2"
                    android:padding="16dp"
                    android:text="@string/watch_an_ad_for_love"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <androidx.core.widget.ContentLoadingProgressBar
                    android:id="@+id/pbMainMenuWatchAdButton"
                    style="@style/MainMenuWatchAdButtonProgress" />

            </FrameLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabMainMenuSettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="24dp"
                android:contentDescription="@string/settings"
                android:src="@drawable/ic_settings" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>