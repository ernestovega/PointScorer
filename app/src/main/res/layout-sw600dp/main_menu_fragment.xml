<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".app.main.fragments.main_menu.MainMenuFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="48dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:gravity="center_horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvMainMenuInitialPointsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:drawableEnd="@drawable/ic_help_24"
            android:drawablePadding="8dp"
            android:drawableTint="@color/colorAccent"
            android:text="@string/initial_points"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            android:theme="@style/MyTextInputLayout" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/acetMainMenuInitialPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:digits="-0123456789"
            android:gravity="center"
            android:layout_below="@+id/tvMainMenuInitialPointsTitle"
            android:hint="@string/min_max_points"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="4"
            android:textSize="36sp"
            android:theme="@style/MyTextInputLayout"
            tools:text="9999" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/acbMainMenuResetAllPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_toEndOf="@+id/tvMainMenuInitialPointsTitle"
            android:layout_centerVertical="true"
            android:background="@color/colorAccent"
            android:padding="16dp"
            android:text="@string/restore_all_points"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/acbMainMenuResetAllNamesAndColors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_toEndOf="@+id/acbMainMenuResetAllPoints"
            android:layout_centerVertical="true"
            android:background="@color/colorAccent"
            android:padding="16dp"
            android:text="@string/restore_all_names_and_colors"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:ignore="NestedWeights">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btMainMenu1Player"
                style="@style/MainMenuButton"
                android:contentDescription="@string/one_player"
                app:srcCompat="@drawable/ic_one_player" />

            <androidx.core.widget.ContentLoadingProgressBar
                android:id="@+id/pbMainMenu1Player"
                style="@style/MainMenuButtonProgress"
                tools:visibility="visible" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:ignore="NestedWeights">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btMainMenu2Player"
                style="@style/MainMenuButton"
                android:contentDescription="@string/two_players"
                app:srcCompat="@drawable/ic_two_players" />

            <androidx.core.widget.ContentLoadingProgressBar
                android:id="@+id/pbMainMenu2Player"
                style="@style/MainMenuButtonProgress"
                tools:visibility="visible" />

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:ignore="NestedWeights">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btMainMenu3Player"
                style="@style/MainMenuButton"
                android:contentDescription="@string/three_players"
                app:srcCompat="@drawable/ic_three_players" />

            <androidx.core.widget.ContentLoadingProgressBar
                android:id="@+id/pbMainMenu3Player"
                style="@style/MainMenuButtonProgress"
                tools:visibility="visible" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:ignore="NestedWeights">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btMainMenu4Player"
                style="@style/MainMenuButton"
                android:contentDescription="@string/four_players"
                app:srcCompat="@drawable/ic_four_players" />

            <androidx.core.widget.ContentLoadingProgressBar
                android:id="@+id/pbMainMenu4Player"
                style="@style/MainMenuButtonProgress"
                tools:visibility="visible" />

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:ignore="NestedWeights">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btMainMenu5Player"
                style="@style/MainMenuButton"
                android:contentDescription="@string/five_players"
                app:srcCompat="@drawable/ic_five_players" />

            <androidx.core.widget.ContentLoadingProgressBar
                android:id="@+id/pbMainMenu5Player"
                style="@style/MainMenuButtonProgress"
                tools:visibility="visible" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:ignore="NestedWeights">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btMainMenu6Player"
                style="@style/MainMenuButton"
                android:contentDescription="@string/six_players"
                app:srcCompat="@drawable/ic_six_players" />

            <androidx.core.widget.ContentLoadingProgressBar
                android:id="@+id/pbMainMenu6Player"
                style="@style/MainMenuButtonProgress"
                tools:visibility="visible" />

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:ignore="NestedWeights">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btMainMenu7Player"
                style="@style/MainMenuButton"
                android:contentDescription="@string/seven_players"
                app:srcCompat="@drawable/ic_seven_players" />

            <androidx.core.widget.ContentLoadingProgressBar
                android:id="@+id/pbMainMenu7Player"
                style="@style/MainMenuButtonProgress"
                tools:visibility="visible" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:ignore="NestedWeights">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btMainMenu8Player"
                style="@style/MainMenuButton"
                android:contentDescription="@string/eight_players"
                app:srcCompat="@drawable/ic_eight_players" />

            <androidx.core.widget.ContentLoadingProgressBar
                android:id="@+id/pbMainMenu8Player"
                style="@style/MainMenuButtonProgress"
                tools:visibility="visible" />

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llMainMenuAdsContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:minHeight="50dp"
        android:orientation="horizontal" />

</LinearLayout>